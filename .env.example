# FlowBridge Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3002
NODE_ENV=development

# AI Configuration
# Provider: openrouter (free tier) or ollama (local)
AI_PROVIDER=openrouter

# OpenRouter Configuration (FREE MODELS ONLY)
OPENROUTER_API_KEY=your_openrouter_api_key_here
# Free models as of 2025 - see https://openrouter.ai/models/?q=free
# Note: Some free models may be rate-limited - check OpenRouter for current availability
AI_MODEL_FAST=mistralai/mistral-7b-instruct:free
AI_MODEL_QUALITY=mistralai/mistral-7b-instruct:free
# Enforce free models only (prevents accidental paid API usage)
OPENROUTER_FREE_ONLY=true

# Ollama Configuration (if AI_PROVIDER=ollama)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL_FAST=llama3.1:8b
OLLAMA_MODEL_QUALITY=llama3.1:70b

# AI Performance
MAX_CONCURRENT_AI_REQUESTS=5

# OpenPhone API
OPENPHONE_API_KEY=your_openphone_api_key_here
OPENPHONE_WEBHOOK_SECRET=your_webhook_secret_here

# Gmail API (OAuth2)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost:3002/auth/gmail/callback

# WhatsApp Cloud API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token

# Google Sheets API
GOOGLE_SHEETS_SPREADSHEET_ID=your_sheet_id_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Owner Contact (for alerts)
OWNER_WHATSAPP=+1234567890
OWNER_EMAIL=owner@example.com

# Optional: Report Schedule (cron format)
DAILY_REPORT_TIME="0 18 * * *"  # 6pm daily
WEEKLY_REPORT_TIME="0 18 * * 0"  # 6pm Sunday

# Optional: Advanced Features
ENABLE_SENTIMENT_ANALYSIS=false
ENABLE_AUTO_RESPONSES=false
ENABLE_PREDICTIVE_MAINTENANCE=false

# Optional: Performance Tuning
CACHE_TTL=3600  # 1 hour in seconds
BATCH_WRITE_INTERVAL=30000  # 30 seconds
MAX_RETRIES=3
RETRY_DELAY=1000  # 1 second
